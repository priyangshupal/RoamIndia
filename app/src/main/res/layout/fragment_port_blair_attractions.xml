    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/delhi_attractions_background"
    tools:context=".port_blair.attractions.Port_blair_attractions">

    <ImageView
        android:id="@+id/header_attractions_port_blair"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/port_blair_attractions_header" />

    <ListView
        android:id="@+id/portBlairAttractionsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp" />

</LinearLayout>